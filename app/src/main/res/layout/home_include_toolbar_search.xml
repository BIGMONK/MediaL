<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/lib_shape_gradual_main_bg">

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/home_icon_down_white"
        android:gravity="center_vertical"
        android:text="上海市"
        android:textColor="#fff"
        android:textSize="14sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/iv_red"
        android:layout_toRightOf="@+id/tv_city">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="@drawable/home_shape_toolbar_search" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/iv_search_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/home_icon_search_white" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_search_left"
                android:background="@null"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="搜索商品"
                android:longClickable="false"
                android:textColorHint="#fff"
                android:textIsSelectable="false"
                android:textSize="14sp" />
        </RelativeLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/iv_red"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/home_icon_add_friend"
        android:visibility="visible" />

    <View
        android:id="@+id/v_toolbar_search_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" />

</RelativeLayout>